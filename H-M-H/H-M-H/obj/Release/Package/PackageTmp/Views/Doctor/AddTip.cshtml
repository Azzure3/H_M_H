<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-7 col-sm-6">
                <div class="contact-form">
                    <div class="section-heading">
                        <h2>Add New Tip</h2>
                        <div class="line"></div>
                    </div>

                    <form method="post" enctype="multipart/form-data"  action="/Doctor/AddNewTip">
                            Upload Image: <input class="wp-form-control wpcf7-text" type="file" name="image" />
                            <input type="text" name="Title" class="wp-form-control wpcf7-text" placeholder="Tip Title">

                            @if (@ViewBag.TipTypes != null)
                            {

                                <select class="wp-form-control" name="tips_Type">
                                    <option value="">Select Tip Type </option>
                                    @foreach (String str in @ViewBag.TipTypes)
                                    {
                                        <option value="@str"> @str </option>
                                    }
                                </select>
                            }
                            <textarea name="tips_Content" class="wp-form-control wpcf7-textarea" cols="30" rows="10" placeholder="Write here.."></textarea>
                            <button class="wpcf7-submit button--itzel" type="submit"><i class="button__icon fa fa-envelope"></i><span>Submit Tip</span></button>
                        </form>
</div>
            </div>
        </div>
    </div>
</section>


<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Basic Page Needs
    ================================================== -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
   
    <!-- Mobile Specific Metas
    ================================================== -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/icon" href="~/images/favicon.ico" />
   
    <!-- CSS
    ================================================== -->
    <!-- Bootstrap css file-->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font awesome css file-->
    <link href="~/css/font-awesome.min.css" rel="stylesheet">
    <!-- Default Theme css file -->
    <link id="switcher" href="~/css/themes/default-theme.css" rel="stylesheet">
    <!-- Slick slider css file -->
    
    <link href="~/css/slick.css" rel="stylesheet" />
    <link href="~/css/photoswipe.css" rel="stylesheet" />
    <link href="~/css/default-skin.css" rel="stylesheet" />
    

    <!-- Main structure css file -->
    <link href="style.css" rel="stylesheet">
    <!-- Google fonts -->
    <link href='http://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Habibi' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Cinzel+Decorative:900' rel='stylesheet' type='text/css'>


</head>
<body>
    <header id="header">
        <!-- BEGIN MENU -->
        <div class="menu_area">
            <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <!-- FOR MOBILE VIEW COLLAPSED BUTTON -->
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <!-- LOGO -->

                        <a class="navbar-brand" href="/Home/Index"><i class="fa fa-heartbeat"></i>HMH  <br>Health Care</a>

                        <!-- IMG BASED LOGO  -->
                        <!--  <a class="navbar-brand" href="index.html"><img src="Content/images/logo.png" alt="logo"></a>   -->
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul id="top-menu" class="nav navbar-nav navbar-right main-nav">
                            <li class="active"><a href="/Home/Index">Home</a></li>
                            <li><a href="/Home/AboutUs">About Us</a></li>
          
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Services<span class="fa fa-angle-down"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="/Home/HealthTips">Health Tips</a></li>
                                    <li><a href="/Home/Blogs">Blogs</a></li>
                                </ul>
                            </li>
                            <li><a href="/Home/Features">Features</a></li>

                            <li><a href="/Home/Contact">Contact</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Sign Up <span class="fa fa-angle-down"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#SignModal" data-toggle="modal" data-target="#SignModal">Doctor</a></li>
                                    <li><a href="#SignModal1" data-toggle="modal" data-target="#SignModal1">Patient</a></li>
                                </ul>
                            </li>
                            <li><a href="#LogModal" data-toggle="modal" data-target="#LogModal">LogIn</a></li>
                        </ul>
                </div>
          </div>
            </nav>
            $('#logModal').on('hidden.bs.modal', function() {
            return false;
            });
        </div>
        <div class="modal fade" id="LogModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title" style="color:yellow;">Log-in</h4>
                    </div>
                    <form method="post" action="/Home/Login">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">UserName</label>
                                <input name="uname" class="wp-form-control wpcf7-tel" placeholder="User Name" type="tel">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input name="pass" class="wp-form-control wpcf7-Password" id="exampleInputPassword1" placeholder="Password" type="password">
                            </div>
                            <p class="text-right"><a href="#">Forgot password?</a></p>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-primary btn-success" value="Log-in" />
                            <a href="#" data-dismiss="modal" class="btn btn-danger" type="btn">Cancle</a>
                           
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Doctor Sign up -->
        <div class="modal fade" id="SignModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title" style="color:yellow;">Sign Up</h4>
                    </div>
                    <form action="/Doctor/Signup" method="post">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="exampleInputName">First Name</label>
                                <input class="wp-form-control wpcf7-text" id="exampleInputPassword1" name="f_Name" placeholder="First Name" type="text" required="required">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Last Name</label>
                                <input class="wp-form-control wpcf7-text" id="exampleInputPassword1" name="l_Name" placeholder="Last Name" type="text" required="required">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUserName">User Name</label>
                                <input class="wp-form-control wpcf7-text" id="exampleInputPassword1" name="userName" placeholder="User Name" type="text" required="required">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input class="wp-form-control wpcf7-Password" id="exampleInputPassword1" name="password" placeholder="Password" type="password" required="required">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Confirm Password</label>
                                <input class="wp-form-control wpcf7-Password" id="exampleInputPassword1" name="Password" placeholder="Confirm Password" type="password" required="required">
                            </div>


                            <div class="form-group">
                                <label for="exampleInputGender" >Gender</label>
                                <select class="wp-form-control wpcf7-number" id="exampleInputPassword1" name="Gender" required="required">
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Other</option>
                                </select>                                
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword1">Age</label>
                                <input class="wp-form-control wpcf7-number" id="exampleInputPassword1" name="Age" placeholder="Patient Age" type="number" required="required">
                            </div>                           
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input class="wp-form-control wpcf7-email" id="exampleInputEmail1" name="Email" placeholder="Enter email" type="email" required="required">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Phone No</label>
                                <input class="wp-form-control wpcf7-tel" id="exampleInputEmail1" name="PhoneNo" placeholder="Phone No" type="tel" required="required">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Permanent address</label>
                                <input class="wp-form-control wpcf7-text" id="exampleInputEmail1" name="Address" placeholder="Permanent Adress" type="text" required="required">
                            </div>
                            <div class="form-group">
                                <label for="examplespecification">Specification</label>
                                <select class="wp-form-control wpcf7-text" id="examplespecification" name="Specification" required="required">
                                    <option>--none--</option>
                                    <option>Cardiologist</option>
                                    <option>Dermatologist(Skin Specialist)</option>
                                    <option>Nephrologist(Kidney Specialist)</option>
                                    <option>Neurologist</option>
                                    <option>Gynecologist</option>
                                    <option>Ophothalomologist</option>
                                    <option>Oral Surgeon</option>
                                    <option>Dental Surgeon</option>
                                    <option>Plastic Surgeon</option>
                                    <option>Radiation Onconlogist</option>
                                    <option>Urologist</option>

                                </select>
                            </div>
                            <div class="form-group">
                                <label for="Avail_up_Time">Available From time</label>
                                <input class="wp-form-control wpcf7-text" id="Avail_up_Time" name="Avail_up_Time" placeholder="enter time" type="time" required="required">
                            </div>
                            <div class="form-group">
                                <label for="Avail_low_Time">Available Up To time</label>
                                <input class="wp-form-control wpcf7-text" id="Avail_low_Time" name="Avail_low_Time" placeholder="enter time" type="time" required="required">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-primary" value="Sign Up">
                            <a href="#" data-dismiss="modal" class="btn btn-danger">Cancle</a>
                            
                        </div>
                    </form>
                </div>
                
            </div>
          
        </div>
        
        <!-- Patient Sign up -->
        <div class="modal fade" id="SignModal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title" style="color:yellow;">Sign Up</h4>
                    </div>
                    <form action="Patient/Signup" method="post">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="exampleInputName">First Name</label>
                                <input class="wp-form-control wpcf7-text" id="exampleInputPassword1" name="f_Name" placeholder="First Name" type="text" required="required">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Last Name</label>
                                <input class="wp-form-control wpcf7-text" id="exampleInputPassword1" name="l_Name" placeholder="Last Name" type="text" required="required">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUserName">User Name</label>
                                <input class="wp-form-control wpcf7-text" id="exampleInputPassword1" name="userName" placeholder="User Name" type="text" required="required">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input class="wp-form-control wpcf7-Password" id="exampleInputPassword1" name="password" placeholder="Password" type="password" required="required">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Confirm Password</label>
                                <input class="wp-form-control wpcf7-Password" id="exampleInputPassword1" name="Password" placeholder="Confirm Password" type="password" required="required">
                            </div>


                            <div class="form-group">
                                <label for="exampleInputGender">Gender</label>
                                <select class="wp-form-control wpcf7-number" id="exampleInputPassword1" name="Gender" required="required">
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Other</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword1">Age</label>
                                <input class="wp-form-control wpcf7-number" id="exampleInputPassword1" name="Age" placeholder="Patient Age" type="number" required="required">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input class="wp-form-control wpcf7-email" id="exampleInputEmail1" name="Email" placeholder="Enter email" type="email" required="required">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Phone No</label>
                                <input class="wp-form-control wpcf7-tel" id="exampleInputEmail1" name="PhoneNo" placeholder="Phone No" type="tel" required="required">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Permanent address</label>
                                <input class="wp-form-control wpcf7-text" id="exampleInputEmail1" name="Address" placeholder="Permanent Adress" type="text" required="required">
                            </div>
                            <label for="examplespecification">Disease</label>
                            <select class="wp-form-control wpcf7-text" id="examplespecification" name="Disease" required="required">
                                <option>--none--</option>
                                <option>Cardiologist</option>
                                <option>Dermatologist</option>
                                <option>Nephrologist</option>
                                <option>Neurologist</option>
                                <option>Gynecologist</option>
                                <option>Ophothalomologist</option>
                                <option>Oral Surgeon</option>
                                <option>Dental Surgeon</option>
                                <option>Plastic Surgeon</option>
                                <option>Radiation Onconlogist</option>
                                <option>Urologist</option>

                            </select>                          
                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-primary" value="Sign Up">
                            <a href="#" data-dismiss="modal" class="btn btn-danger">Cancle</a>
                            
                        </div>
                    </form>
                </div>

            </div>

        </div>
        <!-- END MENU -->
    </header>
    <!-- jQuery Library  -->
    <script src="~/js/jquery.js"></script>
    <!-- Bootstrap default js -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- slick slider -->
    <script src="~/js/slick.min.js"></script>
    <script type="text/javascript" src="~/js/modernizr.custom.79639.js"></script>
    <!-- counter -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/waypoints/2.0.3/waypoints.min.js"></script>
    <script src="~/js/jquery.counterup.min.js"></script>
    <!-- Doctors hover effect -->
    <script src="~/js/snap.svg-min.js"></script>
    <script src="~/js/hovers.js"></script>

    <!-- Photo Swipe Gallery Slider -->
    <script src="~/js/photoswipe.min.js"></script>
    <script src="~/js/photoswipe-ui-default.min.js"></script>
    <script src="~/js/photoswipe-gallery.js"></script>

    <!-- Custom ~/js -->
    <script src="~/js/custom.js"></script>


    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)




</body>
</html>
